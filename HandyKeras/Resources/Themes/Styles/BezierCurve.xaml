<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControl="clr-namespace:HandyKeras.UserControl">

    <Style x:Key="BezierCurveBaseStyle" TargetType="userControl:BezierCurve">
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style BasedOn="{StaticResource BezierCurveBaseStyle}" TargetType="userControl:BezierCurve"/>

</ResourceDictionary>